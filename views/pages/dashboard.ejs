<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GRAPHS PAGE</title>
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Symbols+Sharp"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <script src="https://cdn.plot.ly/plotly-2.16.1.min.js"></script>
    <script src="https://unpkg.com/mqtt/dist/mqtt.min.js"></script>
    <link rel="stylesheet" href="./style.css" />
  </head>
  <body>
    <div class="logo-container">
      <img src="/images/logo.svg" alt="Logo">
    </div>
    <div style="color: white; position: absolute; top: 10px; right: 0;">
  <p class="glow-button">Connection Status</p>
  <p class="connection-status">
    <span class="connection-status active-connection">
      <span class="connection-circle"></span>Connected
    </span>
  </p>
</div>
<div class="pod-state">
  <h2>Pod State</h2>
  <p>IDLE</p>
</div>

<!-- Rest of your HTML code -->
    <button class="btn btn-danger" style="position: fixed; bottom: 20px; right: 20px; border-radius: 50%; padding: 12px; width: 80px; height: 80px; line-height: 1; font-size: 12px; text-align: center;">
      <div style="line-height: 1;">
        <div>Emergency</div>
        <div>Stop</div>
      </div>
      
    </button>
    <div class="container">
          <div class="close" id="close-btn">
          </div>
          
      <main>
        <div class="insights">
          <div class="temperature">
            <div class="middle">
              <div class="left">
                <h3>Temperature</h3>
                <h1 id="temperature"></h1>
              </div>
              <div class="icon">
                <span class="material-symbols-outlined">thermostat</span>
              </div>
            </div>
          </div>
          <!-- End of temperature -->
          <div class="pressure">
            <div class="middle">
              <div class="left">
                <h3>Pressure</h3>
                <h1 id="pressure"></h1>
              </div>
              <div class="icon">
                <span class="material-symbols-outlined">
                  blood_pressure
                  </span>
              </div>
            </div>
          </div>
          <!-- End of pressure -->
          <div class="airgap">
            <div class="middle">
              <div class="left">
                <h3 class="heading">Airgap</h3>
                <h1 id="airgap"></h1>
              </div>
              <div class="icon">
                <span class="material-symbols-outlined">
                  air
                  </span>
              </div>
            </div>
          </div>
          <!-- End of airgap -->
        </div>
        <!-- End of Insights -->
        <div class="histories">
          <h2 class="heading">Historical Charts</h2>
          <div class="history-charts">
            <div id="temperature-history" class="history-divs" style="height: 400px;"></div>
            <div id="pressure-history" class="history-divs" style="height: 400px;"></div>
            <div id="airgap-history" class="history-divs" style="height: 400px;"></div>
            <!-- End of airgap history -->
          </div>
        </div>
      </main>
      <div class="right">
        <div class="top">
          <button id="menu-btn">
            <span class="material-symbols-sharp"> menu </span>
          </button>
          <div class="theme-toggler">
          </div>
        </div>
        <!-- End of top -->
        <div class="gauge-charts">
          <h2>Gauge Charts</h2>
          <div class="item">
            <div id="temperature-gauge"></div>
          </div>
          <div class="item">
            <div id="pressure-gauge"></div>
          </div>
          <div class="item">
            <div id="airgap-gauge"></div>
          </div>
        </div>
      </div>
    </div>
    <script type="module" src="./index.js"></script>
    <script type="module" src="./mqttService.js"></script>
  </body>
</html>
